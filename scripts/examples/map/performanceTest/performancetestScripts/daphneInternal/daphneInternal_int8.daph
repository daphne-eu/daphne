  /*
Generate random Matrix
 */
X = as.matrix<si8>(rand($matrix_size, $matrix_size, $minValue, $maxValue, 1.0, 42));

/*
Execute the function
*/
if($operation == 1) {
    X*2;
}
else if($operation == 2) {
    X^2;
}
else if($operation == 3) {
    log(X, 10);
}
else if($operation == 4) {
    exp(X^2);
}
else if($operation == 5) {
    (5*X^5 + 4*X^4 + 3*X^3 + 2*X^2 + 1*X^1);
}
else if($operation == 6) {
    max(0,X);
}
else if($operation == 7) {
    1/(1+exp(-1*X));
}
else if($operation == 8) {
    (X > 42 ? 10 : 0);
}
else if($operation == 10)
{
    (3*X^3 + 2*X^2 + 1*X^1);
}
else {
    print("Invalid operation selected.");
}