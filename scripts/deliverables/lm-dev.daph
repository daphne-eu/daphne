#tg1=now();
// Data generation.
XY = readMatrix($input);
numCols=ncol(XY);
numRows=nrow(XY);
#tg2=now();
#print("Data read time: ", 0);
#print((tg2 - tg1)/1000000, 0);
#print(" milliseconds", 1);

tp0 = now();

// Extraction of X and y.
X = XY[, seq(0, numCols - 2, 1)];
y = XY[, seq(numCols - 1, numCols - 1, 1)];

// Normalization, standardization.
Xmeans = mean(X, 1);
Xstddev = stddev(X, 1);
// Could be expressed as follows to simplify vectorization:
#Xmeans = sum(X, 1) / as.f32($numRows);
#Xstddev = sqrt(sum((X - Xmeans) ^ 2.0, 1) / as.f32($numRows));
X = (X - Xmeans) / Xstddev;
X = cbind(X, fill(as.f32(1.0), nrow(X), 1));
##print(sum(X));
#//A = t(X) @ X;
#// Can be rewritten as follows to simplify vectorization (and for general speed-up):
A = syrk(X);
##print(sum(A));
lambda = fill(as.f32(0.001), ncol(X), 1);
A = A + diagMatrix(lambda);
#print(sum(y));
#b = t(X) @ y;
#// Can be rewritten as follows to simplify vectorization:
#b = t(t(y) @ X);
#// or
b = t(sum((X * y), 1));
#b=gemv(X,y);
beta = solve(A, b);

tp1 = now();

#print("Sum A: ", 0); print(sum(A));
#print("Sum b: ", 0); print(sum(b));

print("Execution time: ", 0);
print((tp1 - tp0)/1000000, 0);
print(" milliseconds", 1);

