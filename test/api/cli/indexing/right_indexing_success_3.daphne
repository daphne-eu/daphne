// Right indexing on frames using column labels.

// ****************************************************************************
// Input frame
// ****************************************************************************

c0 = seq(0  , 54  , 6  );
c1 = seq(1.0, 55.0, 6.0);
c2 = seq(2  , 56  , 6  );
c3 = seq(3.0, 57.0, 6.0);
c4 = seq(4  , 58  , 6  );
c5 = seq(5.0, 59.0, 6.0);
X = frame(c0, c1, c2, c3, c4, c5, "a", "b", "c", "d", "e", "f");

print("input");
print("X");
print(X); // to check if the input is as expected
print("");

// ****************************************************************************
// Only column
// ****************************************************************************

print("X[, \"b\"]");
print(X[, "b"]);
print("X[, \"c\"]");
print(X[, "c"]);

// ****************************************************************************
// Some mixed cases
// ****************************************************************************

print("X[2, \"b\"]");
print(X[2, "b"]);
print("X[2:5, \"c\"]");
print(X[2:5, "c"]);