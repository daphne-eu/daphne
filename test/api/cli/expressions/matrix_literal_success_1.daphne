// Creation and reshaping of matrix literals.

checkMatInt = [1,2,3,4];
print(checkMatInt);
checkMatInt = reshape(checkMatInt, 2, 2);
print(checkMatInt);

checkMatFloat = [1.1,2.2,3.3,4.4];
print(checkMatFloat);
checkMatFloat = reshape(checkMatFloat, 2, 2);
print(checkMatFloat);

checkMatBool = [true,true,false,true];
print(checkMatBool);
checkMatBool = reshape(checkMatBool, 2, 2);
print(checkMatBool);

// Defining matrix dimensions at creation.
ReshapeMatInt = [1,2,3,4](2,2);
print(ReshapeMatInt);