// Creation and reshaping of matrix literals.

checkMatInt = [1,2,3,4];
print(checkMatInt);
checkMatInt = reshape(checkMatInt, 2, 2);
print(checkMatInt);

checkMatFloat = [1.1,2.2,3.3,4.4];
print(checkMatFloat);
checkMatFloat = reshape(checkMatFloat, 2, 2);
print(checkMatFloat);

checkMatBool = [true,true,false,true];
print(checkMatBool);
checkMatBool = reshape(checkMatBool, 2, 2);
print(checkMatBool);
print("");

checkMatString = [ "a", "b", "c", "d" ];
print(checkMatString);
checkMatString = reshape(checkMatString, 2, 2);
print(checkMatString);
print("");

// Defining matrix dimensions at creation.
InferShapeMat1 = [1,2,3,4](2,2);
print(InferShapeMat1);
InferShapeMat2 = [1,2,3,4](1,);
print(InferShapeMat2);
InferShapeMat3 = [1,2,3,4](,1);
print(InferShapeMat3);
InferShapeMat4 = [1,2,3,4](,);
print(InferShapeMat4);